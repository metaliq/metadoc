{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "ES2020",
    "target": "es2020",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./lib"
  },
  "include": ["./src/**/*"]
}
